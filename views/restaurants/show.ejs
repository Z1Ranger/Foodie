<%- include('../partials/header')%>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Foodie</p>
            <div class="list-group">
              <li class="list-group-item active">Info 1</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= restaurant.image %>" alt="">
                <div class="caption-full">
                    <h4><a href=""><%= restaurant.name %></a></h4>
                    <p> <%= restaurant.description %> </p>
                    <p>Submitted By <%= restaurant.author.username %></p>
                    <% if(currentUser && restaurant.author.id.equals(currentUser._id)){ %> 
                        <a class="btn btn-warning" href="/restaurants/<%= restaurant._id%>/edit">Edit</a>
                        <form id="delete-form" action="/restaurants/<%= restaurant._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                     <% } %>   
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/restaurants/<%=  restaurant._id %>/comments/new"> Add New Comment</a>
                </div>
                <hr>
                <% restaurant.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong> <%= comment.author.username %> </strong>
                            <p>
                                <%= comment.text %> 
                            </p>
                        </div>
                    </div>
                <% });  %>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer')%>