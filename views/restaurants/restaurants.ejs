<%- include('../partials/header')%>

<div class="container">
    <header class = "jumbotron">
        <div class = "container">
            <h1>Welcome to Restaurants Page!</h1>
            <p>View our hand-picked restaurants from all the world</p>
            <p >
                <a class = "btn btn-primary btn-large" href="/restaurants/new">Add a new Restaurant</a>
            </p>
        </div>
    </header>

    <div class = "rows text-center" style="display: flex; flex-wrap: wrap;">
        <% restaurants.forEach(function(restaurant){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= restaurant.image %>" alt="">
                    <div class="caption">
                        <h4> <%= restaurant.name %> </h4>
                    </div>
                    <p>
                        <a class="btn btn-primary" href="/restaurants/<%= restaurant._id %>"> More Info</a>
                    </p>
                </div>
            </div>
        <% }) %>

    </div>

    

</div>

<%- include('../partials/footer')%>
